<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Single Orders</title>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/navbar') %>
    <section class="status">
        <div class="container mx-auto">
            <div class="status-box w-2/3 mx-auto">
                <div class="flex items-center justify-between mb-12">
                    <h1 class="text-xl font-bold">Track Status</h1>
                    <h6 class="bg-white rounded-full px-4 py-1 text-green-600 text-xs"><%= order._id %></h6>
                    <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
                </div>
                <ul>
                    <li class="status_line text-xl pb-16" data-status="order_placed"><span>Order placed</span></li>
                    <li class="status_line text-xl pb-16"data-status="confirmed"><span>Order Confirmed</span></li>
                    <li class="status_line text-xl pb-16"data-status="prepared"><span>Preparation</span></li>
                    <li class="status_line text-xl pb-16"data-status="delivered"><span>Out for delivery</span></li>
                    <li class="status_line text-xl"data-status="completed"><span>Completed</span></li>
                </ul>

            </div>

        </div>
    </section>
    <%- include('../partials/script') %>
</body>
</html>
